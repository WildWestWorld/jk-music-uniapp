.music-card {
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}
.music-card .cover {
  position: relative;
  width: 128rpx;
  height: 128rpx;
}
.music-card .cover image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 64rpx;
}
.music-card .cover .circle {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: #fff;
  top: calc(50% - 16rpx);
  right: calc(50% - 16rpx);
}
.music-card .info {
  margin-left: 30rpx;
  max-width: 100%;
}
.music-card .info .name {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #002251;
  line-height: 36rpx;
}
.music-card .info .author {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #7A869A;
  line-height: 34rpx;
}
.music-card .likeAbleContainer {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-self: center;
  margin-right: 20rpx;
}
.music-card .likeAbleContainer .likeAble {
  width: 32rpx;
  height: 30rpx;
}

