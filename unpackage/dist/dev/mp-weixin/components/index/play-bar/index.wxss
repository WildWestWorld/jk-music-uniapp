}
.real-music-list .music-list-container .musicListSrcoll .musicItem .music-info-container .current-music-name {
  color: #0041c4;
}
.real-music-list .music-list-container .musicListSrcoll .musicItem .music-info-container .current-artist-name {
  color: #0041c4;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 25rpx;
}
.real-music-list .music-list-container .musicListSrcoll .musicItem .delete-icon-container {
  height: 100%;
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.real-music-list .music-list-container .musicListSrcoll .musicItem .delete-icon-container .delete-icon {
