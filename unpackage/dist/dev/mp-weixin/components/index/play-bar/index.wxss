.play-bar-placeholder {
  height: 44px;
}
/* 播放工具栏*/
.play-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 44px;
  width: 100%;
  max-width: 100%;
  padding: 0 8px;
  background-color: #fafafa;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}
.play-bar .left {
  max-width: 80%;
  min-width: 80%;
  display: flex;
  align-items: center;
  /*旋转动画*/
}
.play-bar .left .cover {
  width: 44px;
  height: 44px;
  min-width: 44px;
  min-height: 44px;
  border-radius: 50%;
  position: relative;
  top: -6px;
}
.play-bar .left .cover-anim {
  /*旋转10s */
  -webkit-animation: coverRotate 16s linear infinite;
          animation: coverRotate 16s linear infinite;
}
@-webkit-keyframes coverRotate {
from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes coverRotate {
from {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
to {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
.play-bar .left .name {
  font-size: 28rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.play-bar .right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.play-bar .right .icon-play {
  width: 25px;
  height: 25px;
  margin-right: 10px;
}
.play-bar .right .icon-playlist {
  width: 30px;
  height: 30px;
}
.maskBgc {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  left: 0;
  z-index: 100;
  overflow: hidden;
}
.real-music-list {
  position: fixed;
  bottom: calc(0rpx + 2vh);
  left: calc(5% / 2);
  /* 通过位移隐藏列表框 */
  width: 95%;
  height: 55vh;
  border-radius: 40rpx;
  background-color: rgba(255, 255, 255, 0.6);
  -webkit-backdrop-filter: blur(60rpx);
          backdrop-filter: blur(60rpx);
  /* opacity: 0;*/
  display: block;
  -webkit-transform: translate(0%, 58vh);
          transform: translate(0%, 58vh);
  transition: -webkit-transform 0.75s;
  transition: transform 0.75s;
  transition: transform 0.75s, -webkit-transform 0.75s;
  overflow: hidden;
  z-index: 1000;
}
.real-music-list .music-list-container {
  max-height: 100%;
  max-width: 100%;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.real-music-list .music-list-container .music-list-title {
  height: 6vh;
  width: calc(100% - 34rpx);
  font-size: 34rpx;
  line-height: 6vh;
  margin-left: 35rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.75);
}
.real-music-list .music-list-container .music-list-title .musicListLength {
  font-size: 26rpx;
  color: rgba(128, 128, 128, 0.95);
}
.real-music-list .music-list-container .musicListSrcoll {
  margin-left: 34rpx;
  height: 50%;
  flex: 1;
  width: calc(100% - 34rpx);
}
.real-music-list .music-list-container .musicListSrcoll .musicItem {
  position: relative;
  margin: 0rpx 0 0rpx 0rpx;
  height: 70rpx;
  width: 100%;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
}
.real-music-list .music-list-container .musicListSrcoll .musicItem .music-info-container {
  display: flex;
  flex-direction: row;
  width: 80%;
  max-width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.8);
}
.real-music-list .music-list-container .musicListSrcoll .musicItem .music-info-container .artist-name {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 25rpx;
