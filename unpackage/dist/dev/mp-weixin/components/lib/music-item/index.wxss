.scroll-item-container {
  height: 100rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.scroll-item-container .music-item-container {
  height: 100%;
  margin: 0rpx 46rpx 0rpx 46rpx;
  display: flex;
  flex-direction: row;
}
.scroll-item-container .music-item-container .left {
  width: 70%;
  max-width: 70%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.scroll-item-container .music-item-container .left .music-name {
  font-size: 36rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  height: 60%;
  max-height: 60%;
  width: 100%;
  max-width: 100%;
  text-overflow: ellipsis;
}
.scroll-item-container .music-item-container .left .music-name text {
  max-width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
}
.scroll-item-container .music-item-container .left .artist-name-icon-container {
  height: 40%;
  max-height: 40%;
  line-height: 18px;
  font-size: 30rpx;
  color: #838383;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.scroll-item-container .music-item-container .left .artist-name-icon-container .HQ-icon {
  width: 40rpx;
  height: 40rpx;
}
.scroll-item-container .music-item-container .left .artist-name-icon-container .HQ-icon image {
  width: 40rpx;
  height: 40rpx;
}
.scroll-item-container .music-item-container .right {
  width: 30%;
  max-width: 30%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

