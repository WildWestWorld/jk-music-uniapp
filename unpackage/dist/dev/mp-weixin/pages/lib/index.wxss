}
page {
  overflow-y: hidden;
}
.page {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100vw;
  height: 100vh;
}
.page .tabs-container {
  height: 100rpx;
  width: 100vw;
  position: relative;
  background-color: #fff;
  box-sizing: border-box;
}
.page .tabs-container .tabs {
  width: 100%;
  height: 100rpx;
  position: relative;
}
.page .tabs-container .tabs::before {
  width: 100%;
  content: '';
  position: absolute;
  border-bottom: 2rpx solid rgba(128, 128, 128, 0.3);
  transform: scaleY(0.5);
  -webkit-transform: scaleY(0.5);
  bottom: 0;
  left: 0;
}
.page .tabs-container .tabs .tab-item-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
  white-space: nowrap;
}
.page .tabs-container .tabs .tab-item-container .tab-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  min-height: 40rpx;
  color: #999;
  font-weight: 400;
  font-size: 32rpx;
  min-width: 170rpx;
  min-height: 40rpx;
}
.page .tabs-container .tabs .tab-item-container .current-tab-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  min-height: 40rpx;
  color: #0041c4;
  font-size: 36rpx;
  font-weight: bold;
  min-width: 170rpx;
  min-height: 40rpx;
}
.page .tabs-container .tabs .tab-item-container .scroll-bar-container {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 8rpx;
}
.page .tabs-container .tabs .tab-item-container .scroll-bar-container .scroll-bar {
  position: relative;
  box-sizing: border-box;
  min-width: 70rpx;
  max-width: 72rpx;
  height: 8rpx;
  background-color: #0041c4;
  transition-duration: 0.15s;
  border-radius: 8rpx;
}
.page .tab-content-container {
  height: 100%;
  position: relative;
}
.page .tab-content-container .tab-content {
  height: 100%;
}
.page .tab-content-container .tab-content .tab-content-item {
  height: 100%;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content {
  height: 100%;
  box-sizing: border-box;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container {
  height: 100%;
  margin-top: 20rpx;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container .music-item-container {
  height: 100%;
  display: flex;
  flex-direction: row;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container .music-item-container .left {
  width: 70%;
  max-width: 70%;
  display: flex;
  flex-direction: column;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container .music-item-container .left .music-name {
  font-size: 40rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  height: 60%;
  max-height: 60%;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container .music-item-container .left .artist-name-icon-container {
  height: 40%;
  max-height: 40%;
  line-height: 18px;
  font-size: 30rpx;
  color: #838383;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container .music-item-container .left .artist-name-icon-container .HQ-icon {
  width: 40rpx;
  height: 40rpx;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container .music-item-container .left .artist-name-icon-container .HQ-icon image {
  width: 40rpx;
  height: 40rpx;
}
.page .tab-content-container .tab-content .tab-content-item .scroll-content .scroll-container .scroll-item-container .music-item-container .right {
  width: 30%;
  max-width: 30%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

