  -webkit-touch-callout: none;
  -webkit-text-size-adjust: none;
  text-size-adjust: none;
  box-sizing: border-box;
  padding-bottom: 0px;
}
.page {
  position: relative;
  width: 100vw;
  height: 100vh;
}
.page .backgroud-image {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 750rpx;
  height: 470rpx;
  z-index: -1;
}
.page .header {
  padding-top: 250rpx;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.page .header .cover {
  width: 320rpx;
  height: 320rpx;
  border-radius: 34rpx;
  margin-bottom: 40rpx;
}
.page .header .name {
  color: #002251;
  font-size: 36rpx;
  line-height: 42rpx;
  margin-bottom: 20rpx;
}
.page .header .description {
  color: #7A869A;
  max-width: 476rpx;
  height: 56rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 2;
  white-space: nowrap;
}
.page .action-area {
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* 清除小程序原有的样式*/
}
.page .action-area button {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 20rpx;
  text-align: center;
  vertical-align: middle;
  -webkit-appearance: none;
  -webkit-text-size-adjust: 100%;
  /* reset weapp default border*/
}
.page .action-area button::before {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  border: inherit;
  border-radius: inherit;
  /* inherit parent's border radius */
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  opacity: 0;
  content: ' ';
  background-color: black;
  border-color: black;
}
.page .action-area button::after {
  border-width: 0;
}
.page .action-area .playmusic-btn-container .playmusic-btn {
  width: 442rpx;
  height: 88rpx;
  background-color: #0041c4;
  border-radius: 20rpx;
  font-size: 32rpx;
  line-height: 36rpx;
  color: white;
  margin-right: 20rpx;
}
.page .action-area .playmusic-btn-container .playmusic-btn-hover {
  background: #0041c4;
  opacity: 0.8;
}
.page .action-area .download-btn-container .download-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  opacity: 1;
}
.page .action-area .download-btn-container .download-btn .download-image {
  width: 44rpx;
  height: 44rpx;
}
.page .lastPlayMusic {
  margin-top: 80rpx;
}
.page .lastPlayMusic .lastplaymusic-list {
  display: flex;
  flex-direction: column;
  padding: 0 50rpx;
}

